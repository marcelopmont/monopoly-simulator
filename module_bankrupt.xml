<?xml version="1.0" encoding="UTF-8"?>
<project name="module_bankrupt" default="compile.module.bankrupt">
  <dirname property="module.bankrupt.basedir" file="${ant.file.module_bankrupt}"/>
  
  <property name="module.jdk.home.bankrupt" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.bankrupt" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.bankrupt" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.bankrupt" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>
  
  <property name="bankrupt.output.dir" value="${module.bankrupt.basedir}/out/production/bankrupt"/>
  <property name="bankrupt.testoutput.dir" value="${module.bankrupt.basedir}/out/test/bankrupt"/>
  
  <path id="bankrupt.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="bankrupt.module.production.classpath">
    <path refid="${module.jdk.classpath.bankrupt}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="bankrupt.runtime.production.module.classpath">
    <pathelement location="${bankrupt.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="bankrupt.module.classpath">
    <path refid="${module.jdk.classpath.bankrupt}"/>
    <pathelement location="${bankrupt.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="bankrupt.runtime.module.classpath">
    <pathelement location="${bankrupt.testoutput.dir}"/>
    <pathelement location="${bankrupt.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.bankrupt">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.bankrupt">
    <patternset refid="excluded.from.module.bankrupt"/>
  </patternset>
  
  <path id="bankrupt.module.sourcepath">
    <dirset dir="${module.bankrupt.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.bankrupt" depends="compile.module.bankrupt.production,compile.module.bankrupt.tests" description="Compile module bankrupt"/>
  
  <target name="compile.module.bankrupt.production" depends="register.custom.compilers" description="Compile module bankrupt; production classes">
    <mkdir dir="${bankrupt.output.dir}"/>
    <javac2 destdir="${bankrupt.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.bankrupt}/javac">
      <compilerarg line="${compiler.args.bankrupt}"/>
      <bootclasspath refid="bankrupt.module.bootclasspath"/>
      <classpath refid="bankrupt.module.production.classpath"/>
      <src refid="bankrupt.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.bankrupt"/>
    </javac2>
    
    <copy todir="${bankrupt.output.dir}">
      <fileset dir="${module.bankrupt.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.bankrupt.tests" depends="register.custom.compilers,compile.module.bankrupt.production" description="compile module bankrupt; test classes" unless="skip.tests"/>
  
  <target name="clean.module.bankrupt" description="cleanup module">
    <delete dir="${bankrupt.output.dir}"/>
    <delete dir="${bankrupt.testoutput.dir}"/>
  </target>
</project>